{
  "manifest_version": 3,
  "name": "IAI-Lens",
      "version": "4.1.4",
  "description": "Convert 2D images to immersive 3D LIF files with MP4 video generation and VR viewing using Immersity AI",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.immersity.ai/*",
    "https://api.dev.immersity.ai/*",
    "https://*.lambda-url.us-east-1.on.aws/*",
    "https://*.s3.us-east-1.amazonaws.com/*",
    "https://leia-storage-service-production.s3.us-east-1.amazonaws.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/axios.min.js", 

        "libs/LIF.js", 
        "libs/VRRenderers.js", 

        "libs/VRLifViewer.js", 
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "IAI-Lens"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "libs/VRPageSystem.js",
        "libs/*", 
        "shaders/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 